{
    "mcpServers": {
        "gopls":{
            "command": "go",
            "args": ["run", "golang.org/x/tools/gopls@latest", "mcp"],
            "trust": true,
            "env":{
                "GOPACKAGESDRIVER": "./tools/gopls/gopackagesdriver.sh"
            }
        },
        "kubernetes": {
            "command": "npx",
            "args": [
                "-y",
                "kubernetes-mcp-server@latest"
            ]
        }
    }
}